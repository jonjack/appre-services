# AWS Configuration for Services
AWS_REGION=eu-west-2
AWS_ACCOUNT_ID=your-aws-account-id

# Environment
ENVIRONMENT=dev

# DynamoDB Tables (from CDK outputs)
OTP_TABLE_NAME=appreciata-auth-otps-dev
RATE_LIMIT_TABLE_NAME=appreciata-auth-rate-limits-dev
USERS_TABLE_NAME=appreciata-users-dev

# Cognito Configuration (from CDK outputs)
COGNITO_USER_POOL_ID=your-user-pool-id
COGNITO_USER_POOL_ARN=your-user-pool-arn
COGNITO_CLIENT_ID=your-client-id

# Email Configuration
FROM_EMAIL=noreply@yourdomain.com
SES_REGION=eu-west-2

# Lambda Configuration
LAMBDA_TIMEOUT=30
LAMBDA_MEMORY=256

# CDK Deployment
CDK_DEFAULT_ACCOUNT=your-aws-account-id
CDK_DEFAULT_REGION=eu-west-2