# AWS Configuration for Services
AWS_REGION=eu-west-2
AWS_ACCOUNT_ID=your-aws-account-id

# Application Configuration
APP_NAME=appre

# Environment (test or prod)
ENVIRONMENT=test

# Cognito Configuration (from CDK outputs)
COGNITO_USER_POOL_ID=your-user-pool-id
COGNITO_USER_POOL_ARN=your-user-pool-arn
COGNITO_CLIENT_ID=your-client-id

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Email Configuration
FROM_EMAIL=noreply@yourdomain.com
SES_REGION=eu-west-2

# Lambda Configuration
LAMBDA_TIMEOUT=30
LAMBDA_MEMORY=256

# CDK Deployment
CDK_DEFAULT_ACCOUNT=your-aws-account-id
CDK_DEFAULT_REGION=eu-west-2

# Note: Resource names are now generated dynamically using APP_NAME and ENVIRONMENT
# Pattern: {APP_NAME}-{resource-type}-{ENVIRONMENT}
# Examples:
#   DynamoDB Tables: appre-users-test, appre-auth-otps-test, appre-auth-rate-limits-test
#   Lambda Functions: appre-auth-create-challenge-test, appre-email-processor-test
#   SQS Queues: appre-email-queue-test
#   SES Templates: appre-otp-test